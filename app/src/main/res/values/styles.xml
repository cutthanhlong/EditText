<resources>

    <style name="AppTheme" parent="Theme.MaterialComponents.Light.NoActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/xanh_dam</item>
        <item name="colorAccent">#000000</item>
    </style>

    <style name="ThemeLanguage" parent="Theme.AppCompat.Light.NoActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/xanh_dam</item>
        <item name="colorAccent">#000000</item>
    </style>

    <style name="TLayoutStyle" parent="@style/Base.Widget.Design.TabLayout">
        <item name="android:textSize">12.0sp</item>
        <item name="android:textAllCaps">false</item>
    </style>

    <style name="AlertDialogTheme" parent="ThemeOverlay.AppCompat.Dialog.Alert">
        <item name="buttonBarNegativeButtonStyle">@style/NegativeButtonStyle</item>
        <item name="buttonBarPositiveButtonStyle">@style/PositiveButtonStyle</item>
    </style>

    <style name="DialogColorPicker" parent="ThemeOverlay.AppCompat.Dialog.Alert">
        <item name="buttonBarNegativeButtonStyle">@style/NegativeButtonStyle</item>
        <item name="buttonBarPositiveButtonStyle">@style/PositiveButtonStyle</item>
        <item name="alertDialogTheme">@style/MyDialogTheme</item>
    </style>

    <style name="DialogTheme" parent="ThemeOverlay.AppCompat.Dialog.Alert">
        <item name="android:windowBackground">@android:color/transparent</item>
    </style>

    <style name="MyDialogTheme">
        <item name="colorAccent">@color/xanh_dam</item>
    </style>
    <style name="NegativeButtonStyle" parent="Widget.AppCompat.Button.ButtonBar.AlertDialog">
        <item name="android:textColor">@color/black</item>
    </style>

    <style name="PositiveButtonStyle" parent="Widget.AppCompat.Button.ButtonBar.AlertDialog">
        <item name="android:textColor">@color/xanh_dam</item>
    </style>

<!--    <style name="ColorTextTitle" parent="AlertDialog">-->
<!--        <item name="android:textColor">@color/xanh_dam</item>-->
<!--    </style>-->

    <style name="TextToolBar">
        <item name="android:fontFamily">@font/urbanist_400</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_width">wrap_content</item>
        <item name="android:textColor">@color/color_464646</item>
        <item name="android:textSize">16sp</item>
    </style>

    <style name="TextBottomBar">
        <item name="android:fontFamily">@font/urbanist_600</item>
        <item name="android:textColor">@color/color_8394AF</item>
        <item name="android:textSize">12sp</item>
    </style>

    <style name="txtItemBackgrounds">
        <item name="android:fontFamily">@font/urbanist_500</item>
        <item name="android:textColor">@color/color_636363</item>
        <item name="android:textSize">14sp</item>
    </style>

    <style name="txt_language">
        <item name="android:textColor">@color/color_464646</item>
        <item name="android:fontFamily">@font/urbanist_400</item>
        <item name="android:textSize">16sp</item>
    </style>

    <style name="RadioButtonStyle" parent="Theme.AppCompat.Light">
        <item name="colorAccent">#0C9CED</item>
        <item name="android:textColorSecondary">#0C9CED</item>
    </style>

    <style name="txt_title">
        <item name="android:textColor">@color/xanh_dam</item>
        <item name="android:fontFamily">@font/fredoka_600</item>
        <item name="android:textSize">24sp</item>
    </style>
    <style name="txt_content">
        <item name="android:textColor">@color/black</item>
        <item name="android:fontFamily">@font/urbanist_400</item>
        <item name="android:textSize">16sp</item>
    </style>

    <style name="TextViewBaseToolbar">
        <item name="android:fontFamily">@font/urbanist_600</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_width">wrap_content</item>
        <item name="android:textColor">@color/black</item>
        <item name="android:textSize">@dimen/sp16</item>
    </style>

    <style name="DialogAnimation">
        <item name="android:windowEnterAnimation">@anim/slide_in_bottom</item>
        <item name="android:windowExitAnimation">@anim/slide_out_bottom1</item>
    </style>
</resources>
