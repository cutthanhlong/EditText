<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/clMain"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/botron_grid_view">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:id="@+id/clTab"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        app:layout_constraintBottom_toTopOf="@+id/cPicker"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent">

        <ImageView
            android:id="@+id/imgClose"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:background="?android:attr/actionBarItemBackground"
            android:clickable="true"
            android:focusable="true"
            android:padding="16dp"
            android:src="@drawable/ic_close"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

        <HorizontalScrollView
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:paddingVertical="12dp"
            android:scrollbars="none"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toStartOf="@+id/imgDone"
            app:layout_constraintStart_toEndOf="@+id/imgClose"
            app:layout_constraintTop_toTopOf="parent">

            <LinearLayout
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_marginHorizontal="16dp"
                android:orientation="horizontal">

                <androidx.cardview.widget.CardView
                    android:id="@+id/cvImageBg"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    app:cardBackgroundColor="@color/color_DADADA"
                    app:cardCornerRadius="16dp"
                    app:cardElevation="0dp">

                    <TextView
                        android:id="@+id/txtImageBg"
                        style="@style/txtItemBackgrounds"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:gravity="center"
                        android:paddingHorizontal="16dp"
                        android:paddingTop="6dp"
                        android:paddingBottom="6dp"
                        android:text="@string/Image" />
                </androidx.cardview.widget.CardView>

                <androidx.cardview.widget.CardView
                    android:id="@+id/cvGradientBg"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="12dp"
                    app:cardBackgroundColor="@color/color_DADADA"
                    app:cardCornerRadius="16dp"
                    app:cardElevation="0dp">

                    <TextView
                        android:id="@+id/txtGradientBg"
                        style="@style/txtItemBackgrounds"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:gravity="center"
                        android:paddingHorizontal="16dp"
                        android:paddingTop="6dp"
                        android:paddingBottom="6dp"
                        android:text="@string/Gradient" />
                </androidx.cardview.widget.CardView>

                <androidx.cardview.widget.CardView
                    android:id="@+id/cvColorBg"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="12dp"
                    android:layout_marginEnd="24dp"
                    app:cardBackgroundColor="@color/color_DADADA"
                    app:cardCornerRadius="16dp"
                    app:cardElevation="0dp">

                    <TextView
                        android:id="@+id/txtColorBg"
                        style="@style/txtItemBackgrounds"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:gravity="center"
                        android:paddingHorizontal="16dp"
                        android:paddingTop="6dp"
                        android:paddingBottom="6dp"
                        android:text="@string/Color" />
                </androidx.cardview.widget.CardView>
            </LinearLayout>
        </HorizontalScrollView>

        <ImageView
            android:id="@+id/imgDone"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:background="?android:attr/actionBarItemBackground"
            android:padding="16dp"
            android:src="@drawable/ic_check_blue"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

    </androidx.constraintlayout.widget.ConstraintLayout>

    <View
        android:id="@+id/view1"
        android:layout_width="match_parent"
        android:layout_height="0.5dp"
        android:background="@color/color_C1C1C1"
        app:layout_constraintEnd_toEndOf="@id/clTab"
        app:layout_constraintStart_toStartOf="@id/clTab"
        app:layout_constraintTop_toBottomOf="@id/clTab" />

    <LinearLayout
        android:id="@+id/ll_gradients_bar"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="18dp"
        android:gravity="center_vertical"
        android:orientation="horizontal"
        android:visibility="visible"
        app:layout_constraintEnd_toEndOf="@id/clTab"
        app:layout_constraintStart_toStartOf="@id/clTab"
        app:layout_constraintTop_toBottomOf="@id/view1">

        <com.google.android.material.card.MaterialCardView
            android:id="@+id/mcvSpinner"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="16dp"
            app:cardCornerRadius="5dp"
            app:cardElevation="0dp"
            app:strokeColor="@color/color_C1C1C1"
            app:strokeWidth="1dp">

            <TextView
                android:id="@+id/txtName0"
                android:layout_width="110dp"
                android:layout_height="wrap_content"
                android:layout_marginVertical="6dp"
                android:layout_marginStart="16dp"
                android:drawableEnd="@drawable/ic_drop_down"
                android:fontFamily="@font/urbanist_500"
                android:paddingEnd="16dp"
                android:text="@string/Line"
                android:textColor="@color/color_2C2C2C"
                android:textSize="12sp" />
        </com.google.android.material.card.MaterialCardView>

        <RelativeLayout
            android:id="@+id/rlOrientation"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <com.google.android.material.card.MaterialCardView
                android:id="@+id/mcvOrientation"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentEnd="true"
                android:layout_marginEnd="16dp"
                android:clickable="true"
                android:focusable="true"
                app:cardCornerRadius="10dp"
                app:cardElevation="0dp">

                <ImageView
                    android:id="@+id/imgOrientation"
                    android:layout_width="36dp"
                    android:layout_height="36dp"
                    android:background="@drawable/ic_horizontal" />
            </com.google.android.material.card.MaterialCardView>
        </RelativeLayout>
    </LinearLayout>

    <GridView
        android:id="@+id/gv_backgrounds"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_centerHorizontal="true"
        android:layout_marginHorizontal="16dp"
        android:background="@color/neutral_trang"
        android:clipToPadding="false"
        android:gravity="center"
        android:horizontalSpacing="8dp"
        android:numColumns="4"
        android:paddingVertical="12dp"
        android:scrollbars="none"
        android:verticalSpacing="8dp"
        android:visibility="visible"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="@id/clTab"
        app:layout_constraintStart_toStartOf="@id/clTab"
        app:layout_constraintTop_toBottomOf="@id/ll_gradients_bar" />

    <androidx.constraintlayout.widget.ConstraintLayout
        android:id="@+id/cPicker"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_gravity="center"
        android:layout_marginHorizontal="16dp"
        android:layout_marginBottom="32dp"
        android:background="@color/neutral_trang"
        android:visibility="invisible"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="@id/clTab"
        app:layout_constraintStart_toStartOf="@id/clTab">

        <com.flask.colorpicker.ColorPickerView
            android:id="@+id/colorPicker"
            android:layout_width="0dp"
            android:layout_height="0dp"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="48dp"
            android:background="@color/neutral_trang"
            app:alphaSlider="true"
            app:alphaSliderView="@+id/v_alpha_slider"
            app:density="12"
            app:layout_constraintBottom_toTopOf="@+id/v_lightness_slider"
            app:layout_constraintDimensionRatio="1"
            app:layout_constraintEnd_toEndOf="@+id/v_alpha_slider"
            app:layout_constraintHorizontal_bias="0.0"
            app:layout_constraintStart_toStartOf="@+id/v_alpha_slider"
            app:layout_constraintTop_toTopOf="parent"
            app:lightnessSlider="true"
            app:wheelType="FLOWER" />

        <com.flask.colorpicker.slider.LightnessSlider
            android:id="@+id/v_lightness_slider"
            android:layout_width="0dp"
            android:layout_height="20dp"
            android:layout_marginTop="16dp"
            app:layout_constraintBottom_toTopOf="@+id/v_alpha_slider"
            app:layout_constraintEnd_toEndOf="@+id/v_alpha_slider"
            app:layout_constraintHorizontal_bias="1.0"
            app:layout_constraintStart_toStartOf="@+id/v_alpha_slider"
            app:layout_constraintTop_toBottomOf="@+id/colorPicker" />

        <com.flask.colorpicker.slider.AlphaSlider
            android:id="@+id/v_alpha_slider"
            android:layout_width="0dp"
            android:layout_height="20dp"
            android:layout_marginHorizontal="24dp"
            android:layout_marginVertical="16dp"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/v_lightness_slider" />
    </androidx.constraintlayout.widget.ConstraintLayout>
</androidx.constraintlayout.widget.ConstraintLayout>