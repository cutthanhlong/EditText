<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/img_bg_home">

    <ImageView
        android:id="@+id/imgSetting"
        android:layout_width="30dp"
        android:layout_height="30dp"
        android:layout_marginTop="@dimen/_19sdp"
        android:layout_marginEnd="@dimen/_19sdp"
        android:background="?android:attr/actionBarItemBackground"
        android:clickable="true"
        android:focusable="true"
        android:src="@drawable/ic_setting_home"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <ImageView
        android:id="@+id/imgLogoHome"
        android:layout_width="231dp"
        android:layout_height="164dp"
        android:layout_marginHorizontal="@dimen/_64sdp"
        android:layout_marginTop="@dimen/_44sdp"
        android:background="@drawable/img_logo_home"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/_23sdp"
        android:orientation="horizontal"
        android:paddingHorizontal="32dp"
        android:weightSum="2"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/imgLogoHome">

        <com.google.android.material.card.MaterialCardView
            android:id="@+id/mcvCreateNew"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:clickable="true"
            android:focusable="true"
            app:cardCornerRadius="@dimen/_15sdp"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toStartOf="@+id/mcvMyGallery"
            app:layout_constraintTop_toTopOf="parent"
            app:rippleColor="#3881F7">

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@color/white"
                android:paddingHorizontal="16dp">

                <ImageView
                    android:id="@+id/img_create_new"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_centerHorizontal="true"
                    android:layout_marginTop="@dimen/_14sdp"
                    android:layout_marginBottom="@dimen/_5sdp"
                    android:src="@drawable/ic_create_new_home" />

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_below="@+id/img_create_new"
                    android:layout_centerHorizontal="true"
                    android:layout_marginBottom="@dimen/_12sdp"
                    android:ellipsize="end"
                    android:fontFamily="@font/urbanist_600"
                    android:gravity="center"
                    android:lines="1"
                    android:maxLines="1"
                    android:text="@string/Create_New"
                    android:textSize="20sp" />
            </RelativeLayout>
        </com.google.android.material.card.MaterialCardView>

        <com.google.android.material.card.MaterialCardView
            android:id="@+id/mcvMyGallery"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginStart="@dimen/_16sdp"
            android:layout_weight="1"
            android:clickable="true"
            android:focusable="true"
            app:cardCornerRadius="@dimen/_15sdp"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintStart_toEndOf="@+id/mcvCreateNew"
            app:layout_constraintTop_toTopOf="parent"
            app:rippleColor="#3881F7">

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@color/white"
                android:paddingHorizontal="16dp">

                <ImageView
                    android:id="@+id/img_my_gallery"
                    android:layout_width="31dp"
                    android:layout_height="30dp"
                    android:layout_centerHorizontal="true"
                    android:layout_marginTop="@dimen/_14sdp"
                    android:layout_marginBottom="@dimen/_5sdp"
                    android:src="@drawable/ic_my_gallery_home" />

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_below="@+id/img_my_gallery"
                    android:layout_centerHorizontal="true"
                    android:layout_marginBottom="@dimen/_12sdp"
                    android:ellipsize="end"
                    android:fontFamily="@font/urbanist_600"
                    android:gravity="center"
                    android:lines="1"
                    android:maxLines="1"
                    android:text="@string/My_Gallery"
                    android:textSize="20sp" />
            </RelativeLayout>
        </com.google.android.material.card.MaterialCardView>
    </LinearLayout>
</androidx.constraintlayout.widget.ConstraintLayout>